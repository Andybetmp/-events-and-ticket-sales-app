{
  "title": "SOA · Panel de Control de Estrés",
  "timezone": "browser",
  "schemaVersion": 39,
  "refresh": "5s",
  "templating": {
    "list": [
      {
        "current": { "text": "Prometheus", "value": "prometheus" },
        "hide": 0,
        "label": "Fuente de Datos",
        "name": "DS_PROMETHEUS",
        "options": [],
        "query": "prometheus",
        "refresh": 1,
        "regex": "",
        "type": "datasource"
      },
      {
        "current": { "text": "Loki", "value": "loki" },
        "hide": 0,
        "label": "Logs",
        "name": "DS_LOKI",
        "options": [],
        "query": "loki",
        "refresh": 1,
        "regex": "",
        "type": "datasource"
      },
      {
        "definition": "label_values(up, job)",
        "hide": 0,
        "includeAll": false,
        "label": "Microservicio",
        "multi": false,
        "name": "service",
        "query": { "query": "label_values(up, job)", "refId": "StandardVariableQuery" },
        "refresh": 1,
        "regex": "",
        "sort": 1,
        "type": "query",
        "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" }
      }
    ]
  },
  "panels": [
    {
      "id": 10,
      "title": "Resumen en Tiempo Real",
      "type": "row",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 0 },
      "collapsed": false
    },
    {
      "id": 2,
      "title": "Tasa Actual (RPS)",
      "type": "stat",
      "gridPos": { "h": 4, "w": 6, "x": 0, "y": 1 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "targets": [{ "expr": "sum(rate(http_server_requests_seconds_count{job=\"$service\"}[1m]))", "refId": "A" }],
      "fieldConfig": {
        "defaults": { "unit": "reqps", "color": { "mode": "continuous-GrYlRd" } },
        "overrides": []
      },
      "options": { "graphMode": "area", "colorMode": "value", "justifyMode": "auto" }
    },
    {
      "id": 3,
      "title": "Latencia P95 Actual",
      "type": "stat",
      "gridPos": { "h": 4, "w": 6, "x": 6, "y": 1 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "targets": [{ "expr": "histogram_quantile(0.95, sum(rate(http_server_requests_seconds_bucket{job=\"$service\"}[1m])) by (le))", "refId": "A" }],
      "fieldConfig": {
        "defaults": { 
          "unit": "s", 
          "thresholds": { "mode": "absolute", "steps": [{ "color": "green", "value": null }, { "color": "orange", "value": 1 }, { "color": "red", "value": 3 }] } 
        }
      },
      "options": { "graphMode": "area", "colorMode": "background" }
    },
    {
      "id": 4,
      "title": "Tasa de Error",
      "type": "stat",
      "gridPos": { "h": 4, "w": 6, "x": 12, "y": 1 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "targets": [{ "expr": "100 * (sum(rate(http_server_requests_seconds_count{job=\"$service\",status=~\"5..\"}[1m])) / sum(rate(http_server_requests_seconds_count{job=\"$service\"}[1m])))", "refId": "A" }],
      "fieldConfig": {
        "defaults": { 
          "unit": "percent", 
          "thresholds": { "mode": "absolute", "steps": [{ "color": "green", "value": null }, { "color": "red", "value": 1 }] } 
        }
      },
      "options": { "graphMode": "none", "colorMode": "background" }
    },
    {
      "id": 5,
      "title": "Estado",
      "type": "stat",
      "gridPos": { "h": 4, "w": 6, "x": 18, "y": 1 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "targets": [{ "expr": "up{job=\"$service\"}", "refId": "A" }],
      "fieldConfig": {
        "defaults": { 
          "mappings": [{ "type": "value", "options": { "0": { "text": "DOWN", "color": "red" }, "1": { "text": "UP", "color": "green" } } }] 
        }
      }
    },
    {
      "id": 11,
      "title": "Métricas Detalladas",
      "type": "row",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 5 },
      "collapsed": false
    },
    {
      "id": 6,
      "title": "Trafico (Solicitudes por Segundo)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 6 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "targets": [{ "expr": "sum(rate(http_server_requests_seconds_count{job=\"$service\"}[2m])) by (status)", "legendFormat": "HTTP {{status}}", "refId": "A" }],
      "fieldConfig": { "defaults": { "unit": "reqps", "custom": { "fillOpacity": 20, "lineWidth": 2, "gradientMode": "opacity" } } }
    },
    {
      "id": 7,
      "title": "Latencia (P95 vs P50)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 6 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "targets": [
        { "expr": "histogram_quantile(0.95, sum(rate(http_server_requests_seconds_bucket{job=\"$service\"}[2m])) by (le))", "legendFormat": "P95", "refId": "A" },
        { "expr": "histogram_quantile(0.50, sum(rate(http_server_requests_seconds_bucket{job=\"$service\"}[2m])) by (le))", "legendFormat": "P50 (Media)", "refId": "B" }
      ],
      "fieldConfig": { "defaults": { "unit": "s", "custom": { "fillOpacity": 10, "lineWidth": 2 } } }
    },
    {
      "id": 12,
      "title": "Logs del Sistema",
      "type": "row",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 14 },
      "collapsed": false
    },
    {
      "id": 9,
      "title": "Logs en Vivo (Loki)",
      "type": "logs",
      "gridPos": { "h": 10, "w": 24, "x": 0, "y": 15 },
      "datasource": { "type": "loki", "uid": "${DS_LOKI}" },
      "targets": [{ "expr": "{job=\"$service\"}", "refId": "A" }],
      "options": { "showTime": true, "showLabels": false, "wrapLogMessage": true }
    }
  ]
}