{
  "title": "SOA Â· Observabilidad de Servicios",
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "10s",
  "templating": {
    "list": [
      { "type": "datasource", "name": "DS_PROMETHEUS", "query": "prometheus", "label": "Prometheus", "refresh": 1 },
      { "type": "datasource", "name": "DS_LOKI", "query": "loki", "label": "Loki", "refresh": 1 },
      {
        "type": "query",
        "name": "service",
        "label": "Servicio",
        "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
        "definition": "label_values(up, job)",
        "query": { "query": "label_values(up, job)", "refId": "svc" },
        "refresh": 2, "multi": false, "includeAll": false
      }
    ]
  },
  "panels": [
    {
      "title": "Tasa de solicitudes (req/s)",
      "type": "timeseries",
      "gridPos": {"x":0,"y":0,"w":12,"h":8},
      "datasource": {"type":"prometheus","uid":"${DS_PROMETHEUS}"},
      "targets": [
        { "expr": "sum(rate(http_server_requests_seconds_count{job=\"$service\"}[5m])) by (status)", "legendFormat": "{{status}}", "refId": "A" }
      ]
    },
    {
      "title": "Latencia P95 (s)",
      "type": "timeseries",
      "gridPos": {"x":12,"y":0,"w":12,"h":8},
      "datasource": {"type":"prometheus","uid":"${DS_PROMETHEUS}"},
      "targets": [
        { "expr": "histogram_quantile(0.95, sum(rate(http_server_requests_seconds_bucket{job=\"$service\"}[5m])) by (le))", "legendFormat": "p95", "refId": "A" }
      ]
    },
    {
      "title": "Error rate (%)",
      "type": "timeseries",
      "gridPos": {"x":0,"y":8,"w":12,"h":8},
      "datasource": {"type":"prometheus","uid":"${DS_PROMETHEUS}"},
      "targets": [
        { "expr": "100 * (sum(rate(http_server_requests_seconds_count{job=\"$service\",status=~\"5..\"}[5m])) / sum(rate(http_server_requests_seconds_count{job=\"$service\"}[5m])))", "legendFormat": "5xx %", "refId": "A" }
      ]
    },
    {
      "title": "Uptime (up)",
      "type": "timeseries",
      "gridPos": {"x":12,"y":8,"w":12,"h":8},
      "datasource": {"type":"prometheus","uid":"${DS_PROMETHEUS}"},
      "targets": [
        { "expr": "up{job=\"$service\"}", "legendFormat": "up", "refId": "A" }
      ]
    },
    {
      "title": "Logs de servicio (Loki)",
      "type": "logs",
      "gridPos": {"x":0,"y":16,"w":24,"h":10},
      "datasource": {"type":"loki","uid":"${DS_LOKI}"},
      "targets": [
        { "expr": "{job=\"$service\"}", "refId": "A" }
      ]
    }
  ]
}
